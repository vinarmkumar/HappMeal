# Environment Variables for MealCart Backend
# Copy this file to .env and fill in your API keys

# Required - MongoDB connection
MONGODB_URI=mongodb://localhost:27017/mealcart

# Required - JWT secret for authentication
JWT_SECRET=your_jwt_secret_here

# Required - Gemini AI API key
GEMINI_API_KEY=your_gemini_api_key_here

# Optional but Recommended - Google Custom Search for accurate recipe images
# Get these from: https://console.cloud.google.com/
GOOGLE_API_KEY=your_google_api_key_here
GOOGLE_SEARCH_ENGINE_ID=your_google_search_engine_id_here

# Optional - Unsplash API for high-quality food images
# Get this from: https://unsplash.com/developers
UNSPLASH_ACCESS_KEY=your_unsplash_access_key_here

# Server Configuration
PORT=5001
NODE_ENV=development

# Logging Configuration
# LOG_LEVEL options: ERROR, WARN, INFO, DEBUG, TRACE
LOG_LEVEL=INFO

# Enable file logging (logs will be written to logs/ directory)
ENABLE_FILE_LOGGING=true

# Frontend URL for CORS (update for production)
FRONTEND_URL=https://meal-cart-phi.vercel.app

# Development Logging Examples:
# LOG_LEVEL=DEBUG (shows all debug info)
# LOG_LEVEL=TRACE (shows detailed request traces)
# ENABLE_FILE_LOGGING=true (saves logs to files)

# Production Logging Examples:
# LOG_LEVEL=WARN (only warnings and errors)
# ENABLE_FILE_LOGGING=false (console only)

# Note: Without Google and Unsplash API keys, the app will still work
# using free APIs and default images, but image matching may be less accurate.
